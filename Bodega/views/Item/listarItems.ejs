<h1>Lista de Items</h1>

<div class="row">
  <div class="col-sm-9">
    <p>Aqu√≠ se listan todos los items del sistema</p>
  </div>
  <div class="col-sm-3">
    <a href="/CrearItem" class="btn btn-block btn-success">
      Crear Item
    </a>
  </div>
</div>
<br>


<% for(var i=0; i<items.length; i++) {%>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8 formatoListar">
    <div class="row ma-margen-top-bottom">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
        <div class="text-center  ma-padding-top-bottom">
          <h1> <%= items[i].nombre %></h1>
        </div>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-4 text-center">
        <div class="text-center " style="margin-top: 40px;">
          <p>
            <%= items[i].nombre %>
          </p>
          <p>
            Cantidad: <%= items[i].cantidad %>
          </p>
          <p>
            Peso: <%= items[i].peso %> gramo(s)
          </p>
          <p>
            <%if((items[i].idBodega)==undefined)
            {
              var texto = "Esta bodega ha sido eliminada. Considere eliminar este producto";
            %>
            Bodega: <%=texto%>
            <%
            }
            else
            {%>
            Bodega: <%= items[i].idBodega.nombre%>
            <% }%>
          </p>
        </div>
      </div>
      <div class="col-sm-2">
        <br>
        <a href="/Item/borrarItem?id=<%= items[i].id %>" class="btn btn-danger btn-block">X</a>
        <a href="/EditarItem?id=<%= items[i].id %>" class="btn btn-info btn-block">Editar</a>
      </div>
    </div>
  </div>
  <div class="col-sm-2"></div>
</div>
<br>
<% }%>






